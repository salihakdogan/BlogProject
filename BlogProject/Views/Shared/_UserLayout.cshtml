<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Weblog a Blogging Category Bootstrap responsive WebTemplate | Blog3 :: w3layouts</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="utf-8">
	<meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<link href="~/BlogTemplate/css/bootstrap.css" rel='stylesheet' type='text/css' />
	<link rel="stylesheet" href="~/BlogTemplate/css/single.css">
	<link href="~/BlogTemplate/css/style.css" rel='stylesheet' type='text/css' />
	<link href="~/BlogTemplate/css/fontawesome-all.css" rel="stylesheet">
	<link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
		  rel="stylesheet">
</head>

<body>

	<!--header-->
	<header>
		@await Html.PartialAsync("~/Views/Shared/PartialViews/HeaderPartialTop.cshtml")
		@await Html.PartialAsync("~/Views/Shared/PartialViews/HeaderPartialBottom.cshtml")
	</header>
	<!--/header-->

	<!--banner-->
	<div class="banner-inner">
	</div>
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="index.html">Home</a>
		</li>
		<li class="breadcrumb-item active">Blog3</li>
	</ol>
	<!--/banner-->

	<!--main-->
	<section class="main-content-w3layouts-agileits">
		<div class="container">
			@*<h3 class="tittle">Blog Posts</h3>*@
			<div class="inner-sec">
				<!--left-->
				@RenderBody()
				<!--//left-->
			</div>
		</div>
	</section>
	<!--/main-->

	<!--footer-->
	<footer>
		@await Html.PartialAsync("~/Views/Shared/PartialViews/FooterPartial.cshtml")
	</footer>
	<!--/footer-->

	<!--js-->
	<script src="~/BlogTemplate/js/jquery-2.2.3.min.js"></script>
	<!--/js-->

	<!--smoth-scrolling-->
	<script src="~/BlogTemplate/js/move-top.js"></script>
	<script src="~/BlogTemplate/js/easing.js"></script>
	<script>
		jQuery(document).ready(function ($) {
			$(".scroll").click(function (event) {
				event.preventDefault();
				$('html,body').animate({
					scrollTop: $(this.hash).offset().top
				}, 900);
			});
		});
	</script>
	<!--/smoth-scrolling-->

	<script>
		$(document).ready(function () {
			/*
									var defaults = {
											containerID: 'toTop', // fading element id
										containerHoverID: 'toTopHover', // fading element hover id
										scrollSpeed: 1200,
										easingType: 'linear'
										};
									*/

			$().UItoTop({
				easingType: 'easeOutQuart'
			});

		});
	</script>
	<a href="#home" class="scroll" id="toTop" style="display: block;">
		<span id="toTopHover" style="opacity: 1;"> </span>
	</a>

	<!--/custom-javascript-file-links-->
	<script src="~/BlogTemplate/js/bootstrap.js"></script>

</body>

</html>